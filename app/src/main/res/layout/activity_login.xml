    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/frame1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/contentlr_layout"
        android:layout_height="380dp">

        <TextView
            android:layout_width="match_parent"
            android:text ="Login"
            android:id="@+id/login"

            android:layout_marginTop="10dp"
            android:textColor="#015A94"
            android:textSize="28dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text ="The best way to read news on the go."
            android:layout_below="@id/login"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_height="wrap_content" />

        <com.facebook.login.widget.LoginButton
            android:layout_height="70dp"
            android:id="@+id/fb_login_id"

            facebook:com_facebook_login_text="Log in with facebook"
            android:layout_marginTop="100dp"

            android:paddingTop="15dp"

            android:layout_marginRight="15dp"
            android:paddingBottom="15dp"
            android:theme="@style/facebookstyle"
            android:layout_marginLeft="23dp"
            android:layout_width="300dp"/>

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/login_button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="15dp"

            android:layout_below="@+id/fb_login_id"

            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:id="@+id/linkedin_logout"
            android:layout_below="@id/login_button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="23dp"
            android:text="Logout with Linkedin"
            android:textStyle="bold"
            android:textSize="19dp"
            android:textColor="#fff"
            android:background="@drawable/linkedintile"
            android:layout_marginRight="15dp"

            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="match_parent"
            android:background="@drawable/linkedintile"
            android:layout_below="@id/login_button"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/in_login"
            android:layout_marginRight="15dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="28dp"
            android:text="@string/linkedicon"
            android:textSize="30dp"
            android:id="@+id/tvlinkedlink"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_below="@id/login_button"
            android:layout_marginLeft="37dp"
            android:layout_height="wrap_content" />

        <!--<View-->
            <!--android:layout_width="3dp"-->
            <!--android:background="#265192"-->
            <!--android:layout_below="@id/login_button"-->
            <!--android:layout_marginLeft="75dp"-->
            <!--android:layout_marginTop="22dp"-->
            <!--android:layout_height="45dp"/>-->

        <TextView android:layout_width="match_parent"
            android:layout_below="@id/login"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="48dp"
            android:textSize="19dp"
            android:text="Log in with Linkedin"
android:gravity="center"      android:textColor="#fff"
        android:textStyle="bold"
            android:layout_height="wrap_content" />



        <ImageView
            android:layout_width="match_parent"
            android:background="@drawable/googletile"
            android:layout_below="@id/in_login"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/gmail_login_id"
            android:layout_marginRight="20dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="31dp"
            android:text="@string/googleicon"
            android:textSize="30dp"
            android:id="@+id/tvgooglelink"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_below="@id/in_login"

            android:layout_marginLeft="37dp"
            android:layout_height="wrap_content" />

        <!--<View-->
            <!--android:layout_width="3dp"-->
            <!--android:background="#CA281B"-->
            <!--android:layout_below="@id/in_login"-->
            <!--android:layout_marginLeft="75dp"-->
            <!--android:layout_marginTop="22dp"-->
            <!--android:layout_height="45dp"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/login"
            android:layout_marginTop="270dp"
            android:textSize="19dp"
            android:text="Log in with G+"
android:gravity="center"    android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content" />

        <!--<Button-->
            <!--android:layout_width="match_parent"-->
