<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bcakground"
    android:layout_height="match_parent"
    tools:context="com.logischtech.smartnews.Dashboard">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/dashframe1"

        android:background="#fff"

        android:layout_height="70dp">
        <ImageView
            android:layout_width="156dp"
            android:background="@drawable/logo"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="30dp"
            android:background="@drawable/menubar"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/btncollapse"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#BBBBBB"
        android:id="@+id/view"
        android:layout_marginTop="67dp"
        android:layout_height="6dp"></View>


    <android.support.v4.widget.DrawerLayout
android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/dashframe2"
            android:layout_marginTop="72dp"
            android:background="#005993"

            android:layout_height="70dp">
            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="240dp"
                android:background="@drawable/contentlr_layout"
                android:layout_marginRight="10dp"
                android:text="CONNECT"
                android:textColor="#005A98"
                android:textStyle="normal"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="13dp"
                android:id="@+id/btnconnect"
                android:layout_height="wrap_content" />
            .<Button
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:text="SCAN"
            android:textColor="#005A98"
            android:textStyle="normal"
            android:textSize="18dp"

            android:background="@drawable/contentlr_layout"

            android:id="@+id/selectscan"
                android:layout_marginRight="230dp"
                android:layout_height="45dp">

            </Button>



        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/front"
                    android:background="@drawable/contentlr_layout"

                    android:layout_alignParentTop="true"
                    android:layout_marginTop="160dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="330dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Top Stories :"
                        android:textStyle="bold"
                        android:id="@+id/topstorytxt"
                        android:textColor="#005A98"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:background="#015A94"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/topstorytxt"
                        android:layout_height="1dp"
                        />


                    <LinearLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/activity_main1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="55dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:context="com.logischtech.horizontalrecycler.MainActivity">

                        <!--<ProgressBar-->
                            <!--style="@style/GenericProgressIndicator"/>-->


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/horizontalview"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"/></LinearLayout>


                    <!--</RelativeLayout>-->
                    <!--</android.support.v4.widget.NestedScrollView>>-->
                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/contentlr_layout"

                    android:id="@+id/front2"
                    android:layout_marginTop="505dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="280dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="World :"
                        android:textStyle="bold"
                        android:id="@+id/indiastorytxt"
                        android:textColor="#005A98"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:background="#005A98"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_below="@+id/indiastorytxt"
                        android:layout_height="1dp"
                        />




                            <LinearLayout
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:layout_width="match_parent"
                                android:layout_marginTop="30dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                tools:context="com.logischtech.horizontalrecycler.MainActivity">

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/horizontalview2"
                                    android:layout_width="match_parent"
                                    android:layout_height="240dp"/></LinearLayout>





                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/front3"
                    android:background="@drawable/contentlr_layout"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="800dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="280dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Business :"
                        android:textStyle="bold"
                        android:id="@+id/indiatext"
                        android:textColor="#005A98"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content" />

                    <View
                        android:background="#787878"
                        android:layout_below="@+id/indiatext"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        />



                            <LinearLayout
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:layout_width="match_parent"
                                android:layout_marginTop="30dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                tools:context="com.logischtech.horizontalrecycler.MainActivity">

                                                             <android.support.v7.widget.RecyclerView
                                    android:id="@+id/horizontalview3"
                                    android:layout_width="match_parent"
                                    android:layout_height="240dp"/></LinearLayout>






                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/front4"
                    android:layout_marginTop="1100dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/contentlr_layout"

                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/front3"
                    android:layout_marginRight="10dp"
                    android:layout_height="300dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Technology :"
                        android:textStyle="bold"
                        android:id="@+id/buisnessstorytxtstorytxt"
                        android:textColor="#005A98"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content" />
                    <View
                        android:background="#005A98"
                        android:layout_below="@+id/buisnessstorytxtstorytxt"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="1dp"
                        />


                                               <LinearLayout
                                                   xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_marginTop="40dp"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical"
                                                   tools:context="com.logischtech.horizontalrecycler.MainActivity">

                                                   <android.support.v7.widget.RecyclerView
                                                       android:id="@+id/horizontalview4"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="240dp"/></LinearLayout>










                </RelativeLayout>











            </RelativeLayout>



        </ScrollView>









    </FrameLayout>
.    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        app:menu="@menu/navigation_menu"
        android:fitsSystemWindows="true"
        android:id="@+id/nav_drawer"
        android:background="#0973BB"
        app:itemIconTint="#fff"
        app:itemTextColor="#ffffff"
        app:theme="@style/NavigationDrawerStyle"
        android:layout_gravity="start"
        android:layout_height="match_parent">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
</RelativeLayout>